{
  "name": "tower-defense-card-game",
  "version": "1.0.0",
  "description": "2Dタワーディフェンスゲーム - カード・戦略管理ユニット",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun run build.ts",
    "build:game": "bun run build.ts",
    "serve": "bun run build.ts && bun run server.ts",
    "start": "bun run build.ts && bun run server.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "bunx @biomejs/biome check src tests",
    "lint:fix": "bunx @biomejs/biome check --apply src tests",
    "format": "bunx @biomejs/biome format --write src tests"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}